main, .app
  height: 100%

.app
  display: -webkit-flex
  display: flex

.chat
  display: -webkit-flex
  display: flex
  flex-direction: column
  align-items: stretch
  flex: 1

.titlebar
  display: -webkit-flex
  display: flex
  padding: 10px
  color: white
  background: #434950

  strong
    margin-right: 10px

  span
    flex: 1

.messageInput
  display: -webkit-flex
  display: flex
  padding: 10px
  border-top: 1px solid #DDD
  input
    flex: 1
    margin-right: 10px

.userList
  width: 250px
